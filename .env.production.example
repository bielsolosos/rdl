APP_VERSION=1.0.0
APP_HOST_PORT=8080
SPRING_PROFILES_ACTIVE=prod


# Gerar secret: openssl rand -base64 64
JWT_SECRET=
JWT_EXPIRATION=3600000          # 1 hora (em ms)
JWT_REFRESH_EXPIRATION=86400000 # 24 horas (em ms)

DB_NAME=rdl-db
DB_USERNAME=rdl_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Limites de recursos PostgreSQL
POSTGRES_MEMORY_LIMIT=1G
POSTGRES_MEMORY_RESERVATION=512M
POSTGRES_CPU_LIMIT=2.0
POSTGRES_CPU_RESERVATION=1.0

REDIS_HOST=redis
REDIS_PORT=6379

# Gerar senha forte: openssl rand -base64 32
REDIS_PASSWORD=
REDIS_MAX_MEMORY=512mb

# Limites de recursos Redis
REDIS_MEMORY_LIMIT=512M
REDIS_MEMORY_RESERVATION=256M
REDIS_CPU_LIMIT=1.0
REDIS_CPU_RESERVATION=0.5

# JVM Heap
APP_HEAP_MIN=512m
APP_HEAP_MAX=1g

# Container Limits
APP_MEMORY_LIMIT=2G
APP_MEMORY_RESERVATION=1G
APP_CPU_LIMIT=2.0
APP_CPU_RESERVATION=1.0

